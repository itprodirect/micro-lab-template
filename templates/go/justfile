# Run all checks
check: fmt lint test

# Format code
fmt:
    gofmt -w .

# Check formatting (CI mode)
fmt-check:
    @test -z "$(gofmt -l .)" || (echo "gofmt found unformatted files:" && gofmt -l . && exit 1)

# Lint
lint:
    go vet ./...

# Run tests
test:
    go test ./...

# Run the lab CLI
run:
    go run ./cmd/lab-cli

# Build
build:
    go build -o bin/lab-cli ./cmd/lab-cli

# Build Docker image
docker-build:
    docker build -t __REPO_NAME__ .
