# Run all checks
check: fmt lint test

# Format code
fmt:
    cargo fmt --all

# Check formatting (CI mode)
fmt-check:
    cargo fmt --all -- --check

# Lint with warnings-as-errors
lint:
    cargo clippy -- -D warnings

# Run tests
test:
    cargo test --workspace

# Run the lab CLI
run:
    cargo run -p lab_cli

# Build release
build:
    cargo build --release

# Build Docker image
docker-build:
    docker build -t __REPO_NAME__ .
